{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "module": "commonjs"
  },
  "exclude": [
    "node_modules"
  ]
}